{
  "name": "telegram-delivery-app-1",
  "version": "1.0.0",
  "workspaces": ["client", "server"],
  "scripts": {
    "build": "npm run install:all && npm run build:client",
    "build:client": "cd client && rm -rf node_modules && rm -rf package-lock.json && npm install --verbose && npm run build",
    "install:all": "npm install",
    "start": "npm run install:all && node server/index.js",
    "dev": "concurrently \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "node server/index.js",
    "dev-client": "cd client && npm run dev",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "^3.4.2"
  }
}
